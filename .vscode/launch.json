    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'crypto'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=crypto",
                    "--package=crypto",
                ],
                "filter": {
                    "name": "crypto",
                    "kind": "bin"
                }
            },
            "args": [
                "exchange",
                "2021-12-30T12:20:12",
                "0.1",
                "btc",
                "0.25",
                "eth",
                "4500",
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'crypto'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=crypto",
                    "--package=crypto"
                ],
                "filter": {
                    "name": "crypto",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}